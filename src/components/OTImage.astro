---
interface Props {
  src: string;
  caption?: string;
}
---

<figure>
  <img src={Astro.props.src} class="w-full max-w-[600px] mt-8 px-8" alt={Astro.props.caption ?? ""} />
  {
    Astro.props.caption && (
      <figcaption class="font-cursive text-center sm:text-2xl mt-2">{Astro.props.caption}</figcaption>
    )
  }
</figure>
